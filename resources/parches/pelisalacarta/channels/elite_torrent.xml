<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<channel>
	<id>elite_torrent</id>
	<name>EliteTorrent.net</name>

	<active>true</active>
	<adult>false</adult>
	<language>es</language>

	<fanart></fanart>
	<thumbnail>http://i.imgur.com/2MM3O7z.jpg</thumbnail>
	<bannermenu>http://media.tvalacarta.info/pelisalacarta/bannermenu/elitetorrent.png</bannermenu>

	<update_url>https://raw.githubusercontent.com/surebic/plugin.video.torrentin/master/resources/parches/pelisalacarta/channels/</update_url>
	<version>22</version>
	<date>14/2/2017</date>
	<changes>Nuevos menus con listados por fecha, valoracion y popularidad, extrae torrent en vez de magnet e incluido buscador, arreglado y mejorado (1-2017)</changes>

	<changes>
		<change>
			<date>04/02/17</date>
			<autor>ciberus</autor>
			<description>Incluido temporizador para la API de TMDb ya que los listados son superiores a 30 items</description>
		</change>
	
		<change>
			<date>08/02/17</date>
			<autor>ciberus</autor>
			<description>Incluido numero de votos y guion en vez de comas para separar generos</description>
		</change>
	
		<change>
			<date>14/02/17</date>
			<autor>ciberus</autor>
			<description>Incluido busqueda en TMDb para las series y las busquedas (configurable)</description>
		</change>
	</changes>

	<categories>
		<category>torrent</category>
		<category>movie</category>
		<category>serie</category>
		<category>documentary</category>
		<category>vos</category>
	</categories>
	
    <settings>
        <id>include_in_global_search</id>
        <type>bool</type>
        <label>Incluir en la busqueda global</label>
        <default>true</default>
        <enabled>true</enabled>
        <visible>true</visible>
    </settings>

	<settings>
		<id>modo_rapido</id>
		<type>bool</type>
		<label>Modo una lista con acceso directo al torrent (Mas lento con TMDb activado)</label>
 		<default>false</default>
 		<enabled>true</enabled>
 		<visible>true</visible>
 	</settings>
 
	<settings>
		<id>modo_grafico</id>
		<type>bool</type>
		<label>Buscar datos extra en TMDb</label>
 		<default>true</default>
 		<enabled>true</enabled>
 		<visible>true</visible>
 	</settings>

	<settings>
		<id>modo_grafico_b</id>
		<type>bool</type>
		<label>Buscar datos extra en TMDb tambien en las Busquedas (Mas lenta la busqueda global)</label>
 		<default>true</default>
 		<enabled>true</enabled>
 		<visible>eq(-1 ,true)</visible>
 	</settings>

</channel>
