<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<channel>
	<id>elite_torrent</id>
	<name>EliteTorrent.net *</name>

	<active>true</active>
	<adult>false</adult>
	<language>es</language>

	<fanart></fanart>
	<thumbnail>http://i.imgur.com/2MM3O7z.jpg</thumbnail>
	<bannermenu>http://media.tvalacarta.info/pelisalacarta/bannermenu/elitetorrent.png</bannermenu>

	<update_url>https://raw.githubusercontent.com/surebic/plugin.video.torrentin/master/resources/parches/pelisalacarta/channels/</update_url>
	<version>33</version>
	<date>09/03/2017</date>
	<changes>Nuevos menus con listados por fecha, valoracion y popularidad, extrae torrent en vez de magnet e incluido buscador, arreglado y mejorado (1-2017)</changes>

	<changes>
		<change>
			<date>04/02/17</date>
			<autor>ciberus</autor>
			<description>Incluido temporizador para la API de TMDb ya que los listados son superiores a 30 items</description>
		</change>
	
		<change>
			<date>08/02/17</date>
			<autor>ciberus</autor>
			<description>Incluido numero de votos y guion en vez de comas para separar generos</description>
		</change>
	
		<change>
			<date>14/02/17</date>
			<autor>ciberus</autor>
			<description>Incluido busqueda en TMDb para las series y las busquedas (configurable)</description>
		</change>

		<change>
			<date>15/02/17</date>
			<autor>ciberus</autor>
			<description>Optimizados listados, incluido nuevo modo de entrar en serie completa con todos los capitulos</description>
		</change>
	</changes>

	<categories>
		<category>torrent</category>
		<category>movie</category>
		<category>serie</category>
		<category>documentary</category>
		<category>vos</category>
	</categories>
	
	<settings>
		<id>include_in_global_search</id>
		<type>bool</type>
		<label>Incluir en la búsqueda global</label>
		<default>true</default>
		<enabled>true</enabled>
		<visible>true</visible>
	</settings>

	<settings>
		<id>modo_rapido</id>
		<type>bool</type>
		<label>Modo lista única con acceso directo al torrent (listados más lentos con TMDb activado)</label>
		<default>true</default>
		<enabled>true</enabled>
		<visible>true</visible>
	</settings>

	<settings>
		<id>modo_serie_completa</id>
		<type>bool</type>
		<label>Entrar en la serie completa al picar en un capítulo en el modo lista única</label>
		<default>true</default>
		<enabled>true</enabled>
		<visible>eq(-1 ,true)</visible>
	</settings>

	<settings>
		<id>modo_grafico</id>
		<type>bool</type>
		<label>Buscar datos extra en TMDb</label>
		<default>true</default>
		<enabled>true</enabled>
		<visible>true</visible>
	</settings>

	<settings>
		<id>modo_grafico_b</id>
		<type>bool</type>
		<label>Buscar datos extra en TMDb también en las Búsquedas (más lenta la busqueda global)</label>
		<default>true</default>
		<enabled>true</enabled>
		<visible>eq(-1 ,true)</visible>
	</settings>

	<settings>
		<id>only_filmname</id>
		<type>bool</type>
		<label>Mostrar sólo el nombre de la película en las listas (para Extended Info AddOn)</label>
		<default>false</default>
		<enabled>true</enabled>
		<visible>true</visible>
 	</settings>

</channel>
